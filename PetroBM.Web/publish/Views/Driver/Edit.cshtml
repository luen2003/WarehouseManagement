            <div class="col-md-3">
                <div class='input-group date' id='JDriversLicenseExpire'>
                    @Html.EditorFor(model => model.DriversLicenseExpire, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="form-group">
