@section scripts{
    <script>

        $(function () {
            $('#JLicenseDate').datetimepicker({ format: 'DD/MM/YYYY' });
            $('#JBirthDate').datetimepicker({ format: 'DD/MM/YYYY' });
            $('#JDriversLicenseExpire').datetimepicker({ format: 'DD/MM/YYYY' });
            $('#JSavetyCertificatesExpire').datetimepicker({ format: 'DD/MM/YYYY' });
        });

</script>
    }

