@model PetroBM.Web.Models.CustomerModel
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách Khách hàng";
}
@using (Html.BeginForm("Index", "Customer", FormMethod.Post))
{

                var alert = TempData["AlertMessage"];
                if (null != alert && !string.IsNullOrEmpty(alert.ToString()))
                {
        <div class="alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>@alert</strong>
        </div>
    }
    <div class='col-sm-4 col-xs-6'>
        <div class="row">
            <label class="control-label col-xs-5">Mã khách hàng</label>
            <div class="form-group col-xs-7">
                @Html.EditorFor(model => model.CustomerCode, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="row">
            <label class="control-label col-xs-5">Mã số thuế</label>
            <div class="form-group col-xs-7">
                @Html.EditorFor(model => model.TaxCode, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>
    <input type="submit" value="Tìm Kiếm" class="btn btn-primary" />
<table class="table table-striped">
    <thead>
        <tr>
                 <th>
                @Html.DisplayNameFor(model => model.Customer.CustomerCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.TaxCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.AccountNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.CustomerAddress)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.Customer.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.Unit)
            </th>
            <th></th>
        </tr>
    </thead>

        @foreach (var item in Model.ListCustomer)
{
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.CustomerCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaxCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerAddress)
        </td>


     
            @if (@item.Price.Equals("M1"))
            {
        <td>
            Vùng 1
        </td>
            }
            else
            {
        <td>
            Vùng 2
        </td>
            }


            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "delete-customer" })
            </td>
        </tr>
        }
</table>

<div class="text-center">
    @Html.PagedListPager(Model.ListCustomer, page => Url.Action("Index", new { page , customerCode =Model.CustomerCode, taxCode = Model.TaxCode }))
</div>
}
<p>
    <input type="button" value="Tạo mới" class="btn btn-success" onclick="location.href='@Url.Action("Create")'" />
    
    @using (Html.BeginForm("Import", "Customer", FormMethod.Post,new { enctype = "multipart/form-data" }))
    {
        <input type="submit" value="Nhập từ file Excel" class="btn btn-primary" />
        <div class="btn btn-primary">
            @Html.TextBoxFor(model => model.ImportFile,
            new { type = "file", accept = "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" })</div>

        }
</p>



@section scripts{
    <script>
        $(document).ready(function () {
            $('.delete-customer').click(function () {
                var r = confirm("Bạn chắc chắn muốn xóa bản ghi này?");
                return r;
            });
        });
    </script>



}